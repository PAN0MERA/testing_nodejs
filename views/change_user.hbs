<h2>Редактировать</h2>

<form class="cute-form" action="/change_user" method="post" enctype="multipart/form-data">
  <label for=""><p>Имя</p><input type="text" name="name" value="{{obj.name}}" class='cute-input'></label>
  <label for=""><p>Пароль</p><input type="password" name="password" value="{{obj.password}}" class='cute-input'></label>
  <label for=""><p>Повторите пароль</p><input type="password" name="configPassword" value="{{obj.password}}" class='cute-input'></label>
  <label for=""><p>Фотография</p><input type="file" name="avatar" value=""></label>
  <input type="hidden" name="avatar_save" value="{{obj.photo}}">
  <label for=""><p>Дополнительная информация</p>  <textarea name="metaUser" rows="8" cols="80" class='create-textarea'>{{obj.meta}}</textarea></label>
  <input type="submit" name="" value="Сохранить" class='cute-button'>
</form>
